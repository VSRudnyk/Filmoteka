<div class='team-section'>
  <div class='team-section__container'>
    <h2 class='team__title'>
        <span class='team-title-accent'>Our </span>
        Team
    </h2>
    <ul class='cards-container js-team list'>
      {{#each this}}
        <li id='{{id}}' class='card'>
          <a href='#{{id}}' class='link'>
            <div class='card__content'>
              <div class='imgBox'>
                <img class='imgBox__img' src='{{image}}' alt='{{name}}' />
              </div>
              <div class='contentBox'>
                <h3 class='contentBox__title'>{{name}}<br /><span
                    class='contentBox__subtitle'
                  >{{description}}</span></h3>
              </div>
            </div>
          </a>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
